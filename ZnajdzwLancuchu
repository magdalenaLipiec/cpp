#include <iostream>

using namespace std;

int main()
{
    string napis = "Ala ma kota";
    string szukaj = "kot";

    size_t pozycja = napis.find(szukaj);

    if (pozycja != string::npos)    //da prawde jak znalezio no
    {
        cout<<"Znaleziono na pozycji: "<<pozycja;
    }
    else cout<<"Nie znaleziono"<<endl;
    return 0;
}
